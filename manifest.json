{
	"manifest_version": 2,
	"description":  "迅雷，快车，QQ，电驴，磁力链，115批量下载助手",
	"name":         "批量下载助手",
	"version":      "1.0",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon.png"
	},
	"permissions": [
		"activeTab",
		"tabs",
		"http://*/*",
		"https://*/*",
		"clipboardRead",
		"clipboardWrite"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": {
		"page" : "background.html"
	}
}